{
  "name": "Webpage Annotator",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Annotate webpages in one click.",
  "permissions": ["activeTab", "scripting", "storage", "commands"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["../jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Highlight the selected text"
    },
    "addNote": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Add note to with selected text"
    }
  },
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "48": "assets/ext-icon.png",
      "128": "assets/ext-icon.png"
    },
    "default_title": "Web Annotator",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/ext-icon.png",
    "48": "assets/ext-icon.png",
    "128": "assets/ext-icon.png"
  }
}
